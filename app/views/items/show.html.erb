<div class="container col-6 mt-5">
  <h1>Item card: </h1>
  <div class="card">
    <% if @item.photo.key  %>
      <%= cl_image_tag @item.photo.key, width: 100, height: 100, crop: :thumb %>
    <% else %>
      <%=  %>
    <% end %>
    <div class="card-body">
      <h5 class="card-title"><%=@item.name%></h5>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Product Type: <%= @item.type_of_product %></li>
        <li class="list-group-item">Name: <%= @item.color %></li>
        <li class="list-group-item">Price: <%= @item.price %></li>
        <li class="list-group-item">Size: <%= @item.size %></li>
        <li class="list-group-item">Quantity: <%= @item.quantity %></li>
      </ul>
      <div class="card-body">
        <%= link_to "edit", edit_item_path(@item), class: "btn btn-outline-info" %>
        <%= link_to "delete", delete_item_path(@item), class: "btn btn-outline-danger" %>
      </div>
    </div>
  </div>
</div>

