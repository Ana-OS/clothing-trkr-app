<div class="container col-10 mt-5">
  <h1>Inventory:</h1>
  <div class="card-group">
    <% @items.each do |item| %>
    <%= link_to item_path(item), style: "text-decoration: inherit;" do %>
      <div class="card m-4" >
        <% if item.photo.key  %>
          <%= cl_image_tag item.photo.key, width: 100, height: 100, crop: :thumb %>
        <% else %>
          <%=  %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= item.name %></h5>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Product Type: <%= item.type_of_product %></li>
            <li class="list-group-item">Name: <%= item.color %></li>
            <li class="list-group-item">Price: <%= item.price %></li>
            <li class="list-group-item">Size: <%= item.size %></li>
            <li class="list-group-item">Quantity: <%= item.quantity %></li>
          </ul>
        </div>
      </div>
    <% end %>
    <% end %>
  </div>
</div>
