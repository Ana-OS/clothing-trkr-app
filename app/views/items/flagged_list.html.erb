<div class="container col-8 mt-5">
  <h1>Items for deletion: </h1>
  <div class="card-group">
    <% @items.each do |item| %>
      <div class="card m-4" style="width: 10rem;">
        <% if item.photo.key  %>
          <%= cl_image_tag item.photo.key, width: 100, height: 100, crop: :thumb %>
        <% else %>
          <%=  %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= item.name %></h5>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Comment:
              <%= item.comment %>
            </li>
          </ul>
            <div class="card-body">
             <%=link_to "edit comment", delete_item_path(item), class: 'btn    btn-outline-primary' %>
              <%=link_to "delete permanently", item_path(item), method: :delete, class: 'btn btn-outline-danger'  %>
              <%=link_to "unlist from deletion", unflag_item_path(item), method: :post, class: 'btn btn-outline-success' %>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
